<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fluent="clr-namespace:Avalonia.Themes.Fluent;assembly=Avalonia.Themes.Fluent"
             xmlns:cp="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             xmlns:local="clr-namespace:CherryKeyLayout.Gui.Converters"
             x:Class="CherryKeyLayout.Gui.App"
             RequestedThemeVariant="Dark">
  <Application.Styles>
    <fluent:FluentTheme />
    <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
    <Style Selector="Window">
      <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
    </Style>
    <Style Selector="TextBlock.title">
      <Setter Property="FontSize" Value="20" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style Selector="TextBlock.section">
      <Setter Property="FontSize" Value="14" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
    </Style>
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
      <Setter Property="Foreground" Value="Black" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="12,6" />
    </Style>
    <Style Selector="Button.ghost">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="10,6" />
    </Style>
    <Style Selector="Button.iconButton">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="4" />
      <Setter Property="Width" Value="28" />
      <Setter Property="Height" Value="28" />
    </Style>
    <Style Selector="Button.iconButton Path">
      <Setter Property="Fill" Value="{DynamicResource TextMutedBrush}" />
    </Style>
    <Style Selector="Button.iconButton:pointerover">
      <Setter Property="Background" Value="{DynamicResource AccentSoftBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource AccentSoftBrush}" />
    </Style>
    <Style Selector="Button">
      <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.colorCircle">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Width" Value="32" />
      <Setter Property="Height" Value="32" />
    </Style>
    <Style Selector="ToggleButton.iconToggle">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="4" />
      <Setter Property="Width" Value="26" />
      <Setter Property="Height" Value="26" />
    </Style>
    <Style Selector="ToggleButton.iconToggle Path">
      <Setter Property="Fill" Value="{DynamicResource TextMutedBrush}" />
    </Style>
    <Style Selector="ToggleButton.iconToggle:checked">
      <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    </Style>
    <Style Selector="ToggleButton.iconToggle:checked Path">
      <Setter Property="Fill" Value="Black" />
    </Style>
    <Style Selector="Grid.appLinkEditor Button.appLinkRemove">
      <Setter Property="Opacity" Value="0" />
      <Setter Property="IsHitTestVisible" Value="False" />
    </Style>
    <Style Selector="Grid.appLinkEditor:pointerover Button.appLinkRemove">
      <Setter Property="Opacity" Value="1" />
      <Setter Property="IsHitTestVisible" Value="True" />
    </Style>
    <Style Selector="Grid.appLinkEditor:focus-within Button.appLinkRemove">
      <Setter Property="Opacity" Value="1" />
      <Setter Property="IsHitTestVisible" Value="True" />
    </Style>
    <Style Selector="TabItem.menuOnlyTab">
      <Setter Property="Height" Value="0" />
      <Setter Property="MinHeight" Value="0" />
      <Setter Property="Margin" Value="0" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Opacity" Value="0" />
      <Setter Property="IsHitTestVisible" Value="False" />
    </Style>
    <Style Selector="Border.card">
      <Setter Property="Background" Value="{DynamicResource CardBrush}" />
      <Setter Property="CornerRadius" Value="14" />
      <Setter Property="Padding" Value="16" />
    </Style>
    <Style Selector="Button.keyButton">
      <Setter Property="Background" Value="#55FFFFFF" />
      <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Padding" Value="0" />
    </Style>
  </Application.Styles>

  <Application.Resources>
    <local:SvgAssetToBitmapConverter x:Key="SvgAssetToBitmap" />
    <Color x:Key="AppBackground">#1D1F24</Color>
    <Color x:Key="SidebarBackground">#15171B</Color>
    <Color x:Key="CardBackground">#262A31</Color>
    <Color x:Key="Accent">#F25C54</Color>
    <Color x:Key="AccentSoft">#F6A57F</Color>
    <Color x:Key="Border">#3A3F48</Color>
    <Color x:Key="TextMuted">#9AA2B1</Color>

    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
      <GradientStop Color="#1D1F24" Offset="0" />
      <GradientStop Color="#232833" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SidebarBrush" Color="{DynamicResource SidebarBackground}" />
    <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource CardBackground}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource Accent}" />
    <SolidColorBrush x:Key="AccentSoftBrush" Color="{DynamicResource AccentSoft}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource Border}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{DynamicResource TextMuted}" />
  </Application.Resources>
</Application>
